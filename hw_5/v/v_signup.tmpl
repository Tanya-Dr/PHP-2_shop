<h2>{{ title }}</h2>
<form class="signup__form" method="post">
  <label for="nickname" class="profile__label">
    <span>Your name</span>
    <input
      required
      name="nickname"
      type="text"
      placeholder="Name"
      class="login__input"
      value="{{ nickname }}"
    />
  </label>
  <label for="email" class="profile__label">
    <span>Your email</span>
    <input
      type="email"
      placeholder="Email"
      class="login__input"
      required
      name="email"
      value="{{ email }}"
    />
  </label>
  <label for="pass" class="profile__label">
    <span>Your password</span>
    <input
      type="password"
      placeholder="Password"
      class="login__input"
      required
      name="pass"
    />
  </label>
  <label for="pass" class="profile__label">
    <span>Confirm the password</span>
    <input
      type="password"
      placeholder="Password"
      class="login__input"
      required
      name="passConfirm"
    />
  </label>
  <p class="form__err">{{ errText }}</p>
  <button class="login__button button_registration" type="submit">
    SIGNUP
  </button>
  <a href="index.php?c=User&act=login" class="item__link">LOGIN</a>
</form>
